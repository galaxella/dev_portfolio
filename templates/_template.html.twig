{% extends 'base.html.twig' %}

    {% block title %}Accueil{% endblock %}

{% block body %}

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <a class="navbar-brand" href="#"> <img src="#" width="30" height="30" class="d-inline-block align-top" alt=""
                                               loading="lazy">
            Donatella LOI</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Accueil <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        About Me
                    </a>
                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                        <a class="dropdown-item" href="#">A bit about me</a>
                        <a class="dropdown-item" href="#">CV</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">LinkedIn</a>
                    </div>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="#">Clients</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Testimonials</a>
                </li>


                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <strong>{{ app.user.pseudo }}</strong></a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                    </li>
                    
                    {# si l'utilisateur n'est pas connecté s'affiche Connexion #}
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                        </li>
                {% endif %}


                {% if is_granted("ROLE_EDITOR") %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <strong>Back-Office</strong></a>
                    </li>
                {% endif %}
            </ul>

        </div>
    </nav>
{% endblock %}



{% block footer %}
    <div class="footer bg-primary">
        <div class="row">
            <div class="col">je suis le footer</div>
        </div>
    </div>
{% endblock %}